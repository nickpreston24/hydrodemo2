@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Todos

<div class="container mx-auto my-4 bg-white rounded-md">
    <div class="rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-3">
            <form hydro-on:submit="@(() => Model.Add())">
                <input asp-for="NewItem" hydro-bind placeholder="Add new task..." class="w-full mb-4 outline-none">
            </form>
        </div>
        <ul class="list-none">
            @foreach (var todo in Model.Items.OrderBy(i => i.Done))
            {
                <li class="flex items-center mb-2">
                    <input type="checkbox"
                           class="mr-2"
                           id="@todo.Id" hydro-on:click="@(() => Model.Toggle(todo.Id))"
                           checked="@(todo.Done ? "checked" : null)"/>
                    <label class="@(todo.Done ? "line-through" : "")"
                           for="@todo.Id">
                        @todo.Content
                    </label>
                </li>
            }
        </ul>
    </div>
</div>